# NAME
#   get_buffer_text
# SYNOPSIS
#   get_buffer_text($widget)
# FUNCTION
#
# INPUTS
#   $widget -
# OUTPUT
# SOURCE
#
sub get_buffer_text {
    my ($widget) = @_;
    return $widget->get_text($widget->get_bounds, FALSE);
}

